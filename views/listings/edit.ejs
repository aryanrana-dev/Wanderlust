<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2 class="nf-heading">Update your listing:</h2>
                <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation"
                    enctype="multipart/form-data" novalidate>
                    <div>
                        <label for="title" class="form-label">Title </label> <input id="title" class="form-control"
                            name="listing[title]" value="<%= listing.title %>" type="text" required>
                        <div class="invalid-feedback">Enter a valid title</div><br>
                    </div>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" class="form-control" name="listing[description]" type="text"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Enter a valid description</div><br>
                    </div>
                    <h5 class="mt-3">Current Image:</h5></br>
                    <img src="<%= previewUrl %>" class="img-fluid mb-2" alt="Current Image">
                    <div>
                        <label for="image" class="form-label">Select New Image</label>
                        <input class="form-control" name="listing[image]" placeholder="Enter image url" type="file"><br>
                    </div>
                    <div>
                        <label for="price" class="form-label">Price </label>
                        <input id="price" class="form-control" name="listing[price]" value="<%= listing.price %>"
                            type="price" required>
                        <div class="invalid-feedback">Enter a valid price</div><br>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="location" class="form-label">Location </label>
                            <input id="location" class="form-control" name="listing[location]"
                                value="<%= listing.location %>" type="text" required>
                            <div class="invalid-feedback">Enter a valid Location</div><br>
                        </div>
                        <div class="col-md-6">
                            <label for="country" class="form-label">Country </label>
                            <input id="country" class="form-control" name="listing[country]"
                                value="<%= listing.country %>" type="text" required>
                            <div class="invalid-feedback">Enter a valid Country</div><br>
                        </div>
                    </div>

                    <button class="btn btn-dark add-btn">Edit</button>
                    <br><br><br>
                </form>
            </div>
        </div>
    </body>