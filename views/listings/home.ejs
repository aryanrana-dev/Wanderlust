<% layout("/layouts/boilerplate.ejs") %>

  <body>
    <div class="filters-container mt-1">
    <div class="filter-item">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-tags"></i>
      <p>Best Deals</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-star"></i>
      <p>Top Rated</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-gem"></i>
      <p>Luxurious</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-location-crosshairs"></i>
      <p>Near You</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beachfront</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-house-chimney-window"></i>
      <p>Cabins</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Pools</p>
    </div>
    <div class="filter-item">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
  </div>
    <h2 class="h-heading">All Listings</h2>
    <div class="row row-cols-lg-3 row-listings">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card">
            <img src=<%=listing.image.url %> class="card-img-top h-card-img" style="object-fit: cover; width: 100%; height: 250px;" alt="listing image"> <div
              class="card-img-overlay"></div>
            <div class="card-body">
              <% if(listing.title.length>25) { %>
               <p class="home-card-title"><b><%= listing.title.slice(0,27) %>...</b></p>
              <% } else {%>
              <p class="home-card-title"><b>
                  <%= listing.title %>
                </b></p>
              <% } %>
                <p class="home-card-price">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night
              </p>
            </div>
          </div>
        </a>
        <% } %>
    </div>
  </body>