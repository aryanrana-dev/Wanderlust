<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-1">
            <div class="col-8 offset-3">
                <h3>
                    <%= listing.title %> :
                </h3>
            </div>
            <div class="card offset-3 col-6 listing-card">
                <img src=<%=listing.image.url %> class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">Owned By: <%= listing.owner.username %>
                    </p>
                    <p class="card-text">
                        <%= listing.description %></br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %></br>
                                <%= listing.location %></br>
                                    <%= listing.country %></br>
                    </p>
                </div>
            </div>
            <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
                <div class="btns">
                    <a class="btn btn-dark offset-3 col-1 edit-btn" href="/listings/<%= listing._id %>/edit">Edit</a>
                    <form style="width: 100%;" method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark offset-1 del-btn">Delete</button>
                    </form>
                </div>
                <% } %>
        </div></br>
        <hr></br>
        <div class="review offset-3">
            <% if(currentUser) { %>
                <h4>Leave a review:</h4></br>
                <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                    <div class="mt-2">
                        <fieldset class="starability-growRotate">
                            <legend>Rating</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    </br>
                    <div class="mt-2">
                        <label class="form-label">Comment: </label></br>
                        <textarea name="review[comment]" id="comment" cols="50" rows="4" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">Enter a valid comment</div>
                    </div>
                    <button class="btn btn-outline-dark mt-2 mb-2" id="submitReview">Submit Review</button>
                </form>
                <% } %>
                    </br>
                    <div class="allReviews">
                        <% if(listing.reviews.length !==0) { %>
                            <h4>All Reviews:</h4>
                            <div class="row mb-2">
                                <% for(let review of listing.reviews) { %>
                                    <div class="card col-5  m-2" style="padding:0px;">
                                        <div class="card-header">
                                            <%= review.author.username %>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <%= review.comment %>
                                            </h6>
                                            <p class="starability-result" data-rating="<%= review.rating %>">
                                            </p>
                                            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                                                <form method="post"
                                                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                    <button class="btn btn-dark">Delete Review</button>
                                                </form>
                                                <% } %>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
                    </div>
        </div>
        <% if(listing.geometry && listing.geometry.coordinates) { %><hr>
            <div class="offset-3 col-6 row mb-2">
                <h4>Where you will be:</h4>
                <div id="my-map" style="height: 400px; width: 100%; border-radius: 10px;"
                    data-coordinates='<%= JSON.stringify(listing.geometry) %>' data-location="<%= listing.title %>">
                </div>
            </div>
            <% } %>
                <script src="/js/map.js">
                </script>
    </body>