<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <h2 class="nf-heading">Log In</h2>
            <form method="post" action="/login" novalidate class="needs-validation">
                <div>
                    <label for="username" class="form-label">Username </label>
                    <input class="form-control" name="username" placeholder="Enter username" type="text" required>
                    <div class="valid-feedback">Username looks good</div>
                    <div class="invalid-feedback">Enter a valid username</div><br>
                </div>
                <div>
                    <label for="password" class="form-label">Password </label>
                    <input class="form-control" name="password" placeholder="Enter password" type="password" required>
                    <div class="valid-feedback">Password looks good</div>
                    <div class="invalid-feedback">Enter a valid password</div><br>
                </div>
                <button class="btn btn-dark login-btn">Log In</button>
                <br><br><br>
            </form>
        </div>
    </div>
</body>